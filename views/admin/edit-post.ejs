<a href="/dashboard">&larr; Retour</a>
<div class="admin-title">
    <h2>Voir / Modifier un article</h2>
    
    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Supprimer" class="btn-delete btn">
    </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">

    <label for="title"><b>Titre</b></label>
    <input type="text" placeholder="Titre du poste" name="title" value="<%= data.title %>" required>

    <label for="section"><b>Section</b></label>
    <input type="text" placeholder="Section du poste" name="section" value="<%= data.section %>" required>

    <label for="body"><b>Contenu</b></label>
    <textarea name="body" cols="50" rows="10"><%= data.body %></textarea>

    <input type="submit" value="Modifier" class="btn">

</form>